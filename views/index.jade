extends layout

block content
  h1= title
  p Welcome to #{title}

  form#searchLang
    h2 Search for a Programming Language
      .form-group
        input#searchBox.form-control(type="text", placeholder="Enter a Language...")
      .form-group
        input.btn.btn-primary(type="submit", value="Search!")
  script(id="searchResults", type="text/x-handlebars-template")
    div#results
      p {{yourLang}}
